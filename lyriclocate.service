# systemd service template
# REPLACE USER AND PATHS
[Unit]
Description=LyricLocate Lyrics API
After=network.target

[Service]
User=your_user
Group=your_group
WorkingDirectory=/path/to/lyriclocate
EnvironmentFile=/path/to/lyriclocate/.env
ExecStart=/path/to/lyriclocate/venv/bin/uvicorn main:app --host 0.0.0.0 --port 19999
Restart=always

[Install]
WantedBy=multi-user.target